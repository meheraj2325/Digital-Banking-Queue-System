<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />


  <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  
    <!-- For navbar -->
  <link rel="stylesheet" href="/assets/cssFiles/navbar.css">
  <script src="/assets/jsFiles/navbar.js"></script>
  <!-- For navbar -->

  <script src="/assets/jsFiles/bankSelector.js"></script>
  <script src="/assets/jsFiles/registration.js"></script>

  <link rel="stylesheet" href="/assets/cssFiles/registration.css" />

  <title>Registration - Digital Banking Queue System</title>
</head>

<body>
  <!-- navigation bar -->
  <%- include("./partials/navbar.ejs") %>

  <div class="container box-container">
    <%- include("./partials/messages.ejs") %>
    <form class="form-horizontal" role="form" method="POST" action="/auth/register">
      <div class="form-title">
        <h3>Please fill up the form to register</h3>
      </div>
      <div class="form-group row">
        <label for="bankInput" class="col-sm-3 control-label">Bank Name*</label>
        <div class="col-sm-7">
          <select class="form-control" name="bankName" id="bankInput" autofocus >
            <option disabled selected value> -- Select a Bank -- </option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 control-label">Location*</label>
        <div class="col-sm-3">
          <select class="form-control" name="division" id="divisionInput" autofocus >
            <option disabled selected value> -- Select Division -- </option>
          </select>
        </div>
        <div class="col-sm-4">
          <select class="form-control" name="district" id="districtInput" >
            <option disabled selected value> -- Select District -- </option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="additionalLocation" class="col-sm-3 control-label"></label>
        <div class="col-sm-7">
          <input type="text" id="additionalLocation" placeholder="Additional location information" class="form-control"
            name="additionalLocation" value="<%= typeof additionalLocation != 'undefined' ? additionalLocation : '' %>"
            autofocus />
        </div>
      </div>
      <div class="form-group row">
        <label for="branchName" class="col-sm-3 control-label">Branch Name*</label>
        <div class="col-sm-7">
          <select class="form-control" name="branchName" id="branchInput" >
            <option disabled selected value> -- Select a Branch -- </option>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label for="phoneNumber" class="col-sm-3 control-label">Phone*</label>
        <div class="col-sm-7">
          <input type="text" id="phoneNumber" placeholder="Phone" class="form-control" name="phoneNumber"
            value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>"  />
        </div>
      </div>

      <div class="form-group row">
        <label for="mobileNumber" class="col-sm-3 control-label">Mobile Number</label>
        <div class="col-sm-7">
          <input type="text" id="mobileNumber" placeholder="Mobile Number" class="form-control" name="mobileNumber"
            value="<%= typeof mobileNumber != 'undefined' ? mobileNumber : '' %>" />
        </div>
      </div>

      <div class="form-group row">
        <label for="email" class="col-sm-3 control-label">Email </label>
        <div class="col-sm-7">
          <input type="email" id="email" placeholder="Email" class="form-control" name="email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
      </div>
      <div class="form-group row">
        <label for="password" class="col-sm-3 control-label">Password*</label>
        <div class="col-sm-7">
          <input type="password" id="password" placeholder="Password" class="form-control" name="password" 
          value="<%= typeof password!= 'undefined' ? password : '' %>" />
        </div>
      </div>

      <div class="form-group row">
        <label for="password2" class="col-sm-3 control-label">Confirm Password*</label>
        <div class="col-sm-7">
          <input type="password" id="password2" placeholder="Confirm Password" class="form-control" name="password2"
          value="<%= typeof password2!= 'undefined' ? password2 : '' %>" />
        </div>
      </div>

      <div class="form-group row">
        <label for="agreement" class="col-sm-3 control-label"></label>
        <div class="col-sm-7">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="agreement" required />
            <p class="agreement">
              I agree to the
              <a href="/termsAndConditions">Terms & Conditions</a>
            </p>
          </div>
        </div>
      </div>

      <!-- /.form-group row -->
      <div class="form-group row">
        <div class="col-sm-3"></div>
        <div class="col-sm-7">
          <span class="help-block">*Required fields</span>
        </div>
      </div>
      <button type="submit" class="btn btn-primary btn-block">
        Register
      </button>
    </form>
    <!-- /form -->
  </div>
  <!-- ./container -->

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
    crossorigin="anonymous"></script>
</body>

<script>
  const bankSelector = $("#bankInput");
  const divisionSelector = $("#divisionInput");
  const districtSelector = $("#districtInput");
  const branchSelector = $("#branchInput");

  // Displaying bank select options
  bankSelector
    .empty()
    .append(`<option disabled selected value> -- Select a Bank -- </option>`);
  for (let i = 0; i < BankAndBranchArray.length; i++) {
    const bank = BankAndBranchArray[i].bankName;
    bankSelector.append(`<option value="${bank}">${bank}</option>`);
  }

  // Displaying division select options
  $("#bankInput").on("change", function () {
    const bankIdx = $("#bankInput option:selected").index() - 1;

    // clearing divisionSelector, districtSelector, branchSelector
    divisionSelector
      .empty()
      .append(
        `<option disabled selected value> -- Select Division -- </option>`
      );

    districtSelector
      .empty()
      .append(
        `<option disabled selected value> -- Select District -- </option>`
      );

    branchSelector
      .empty()
      .append(
        `<option disabled selected value> -- Select a Branch -- </option>`
      );
    const divisionArray = BankAndBranchArray[bankIdx].divisions;
    for (let i = 0; i < divisionArray.length; i++) {
      const division = divisionArray[i].divisionName;
      divisionSelector.append(`<option value="${division}">${division}</option>`);
    }
  });

  // Displaying district select options
  $("#divisionInput").on("change", function () {
    const bankIdx = $("#bankInput option:selected").index() - 1;
    const divisionIdx = $("#divisionInput option:selected").index() - 1;

    // clearing districtSelector, branchSelector
    districtSelector
      .empty()
      .append(
        `<option disabled selected value> -- Select District -- </option>`
      );

    branchSelector
      .empty()
      .append(
        `<option disabled selected value> -- Select a Branch -- </option>`
      );
    const districtArray = BankAndBranchArray[bankIdx].divisions[divisionIdx].districts;
    for (let i = 0; i < districtArray.length; i++) {
      const district = districtArray[i].districtName;
      districtSelector.append(`<option value="${district}">${district}</option>`);
    }
  });

  // Displaying branch select options
  $("#districtInput").on("change", function () {
    const bankIdx = $("#bankInput option:selected").index() - 1;
    const divisionIdx = $("#divisionInput option:selected").index() - 1;
    const districtIdx = $("#districtInput option:selected").index() - 1;

    // clearing branchSelector
    branchSelector
      .empty()
      .append(
        `<option disabled selected value> -- Select a Branch -- </option>`
      );

    const branchArray = BankAndBranchArray[bankIdx].divisions[divisionIdx].districts[districtIdx].branches;
    for (let i = 0; i < branchArray.length; i++) {
      const branch = branchArray[i];
      branchSelector.append(`<option value="${branch}">${branch}</option>`);
    }
  });
</script>

</html>